{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Ensure baseUrl is set to the root of the project
    "paths": {
      "@/*": [
        "*"
      ] // Maps @/ to the root directory
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "metro.config.js",
    "nativewind-env.d.ts"
  ]
}